// Stack operations
OP(LIT , 0x00)
OP(DUP , 0x01)
OP(DROP, 0x02)
OP(SWAP, 0x03)
OP(OVER, 0x04)

// Arithmetic operations
OP(ADD , 0x10)
OP(SUB , 0x11)
OP(MUL , 0x12)
OP(DIV , 0x13)
OP(MOD , 0x14)

// Comparison (signed, Forth-style true = -1)
OP(EQ  , 0x20)
OP(NE  , 0x21)
OP(LT  , 0x22)
OP(LE  , 0x23)
OP(GT  , 0x24)
OP(GE  , 0x25)

// Logical / bitwise operations
OP(AND , 0x28)
OP(OR  , 0x29)
OP(XOR , 0x2A)
OP(INVERT, 0x2B)

// Control flow
OP(JMP , 0x40)
OP(JZ  , 0x41)
OP(JNZ , 0x42)

// Call / return
OP(RET , 0x51)
